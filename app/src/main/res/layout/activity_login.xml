<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="POSSAPP"
        android:textColor="#002AFF"
        android:textSize="24dp"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#aaffffff"
        android:padding="10dp" >
        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="user :"
            android:textColor="#ff222222"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/userEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/user"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/user" />
        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user"
            android:paddingTop="16dp"
            android:text="Password :"
            android:textColor="#ff222222"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/passwordEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/password"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/login"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/exit"
            android:layout_alignBottom="@+id/exit"
            android:layout_alignLeft="@+id/password"
            android:layout_marginLeft="20dp"
            android:drawablePadding="2dp"
            android:text="login" />

        <Button
            android:id="@+id/regist"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/exit"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:drawablePadding="3dp"
            android:text="regist" />

        <Button
            android:id="@+id/exit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/passwordEntry"
            android:layout_below="@id/password"
            android:layout_marginTop="18dp"
            android:drawablePadding="2dp"
            android:text="Exit" />

    </RelativeLayout>

</RelativeLayout>